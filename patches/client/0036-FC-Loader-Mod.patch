+        //fix steam
+        //noinspection unchecked
+        Seq<?> listeners = ((ObjectMap<Object, Seq<?>>)Reflect.get(Events.class, "events")).get(EventType.DisposeEvent.class);
+        if(listeners != null) listeners.clear();
