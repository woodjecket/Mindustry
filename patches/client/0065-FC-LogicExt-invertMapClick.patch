                     public void clicked(InputEvent event, float cx, float cy){
                         var region = renderer.minimap.getRegion();
@@ -45,6 +47,8 @@ public class Minimap extends Table{
                 mapCell.size(size);
                 setSize(Scl.scl(size));
                 setPosition(Scl.scl(margin), Scl.scl(margin));
